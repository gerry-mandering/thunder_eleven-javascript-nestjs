<!DOCTYPE html>
<html>
<head>
  <title>Create Match Page</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      margin: 0;
      padding: 20px;
    }

    h2 {
      text-align: center;
    }

    .create-match {
      max-width: 400px;
      margin: 0 auto;
      background-color: #fff;
      padding: 20px;
      border-radius: 5px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .create-match label {
      font-weight: bold;
    }

    .create-match .field {
      margin-bottom: 20px;
    }

    .create-match .field label {
      display: block;
    }

    .create-match .field input,
    .create-match .field select {
      width: 95%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .match-level {
      margin-top: 10px;
    }

    .match-level input[type=checkbox] {
      height: 0;
      width: 0;
      visibility: hidden;
    }

    .match-level label {
      cursor: pointer;
      text-indent: -9999px;
      width: 40px; /* 20% of the original width */
      height: 20px; /* 20% of the original height */
      background: grey;
      display: block;
      border-radius: 10px; /* 20% of the original border radius */
      position: relative;
    }

    .match-level label:after {
      content: '';
      position: absolute;
      top: 2px; /* Adjust the top position to center the inner circle */
      left: 2px; /* Adjust the left position to center the inner circle */
      width: 16px; /* 20% of the original width */
      height: 16px; /* 20% of the original height */
      background: #fff;
      border-radius: 50%; /* Maintain a circular shape */
      transition: 0.3s;
    }

    .match-level input:checked + label {
      background: #bada55;
    }

    .match-level input:checked + label:after {
      left: calc(100% - 2px); /* Adjust the left position to maintain proportions */
      transform: translateX(-100%);
    }

    .match-level label:active:after {
      width: 20px; /* 20% of the original width */
    }

    .match-level body {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .create-match .submit-button {
      text-align: center;
      margin-top: 20px;
    }

    .create-match .submit-button button {
      background-color: #4CAF50;
      color: #fff;
      border: none;
      padding: 12px 20px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 16px;
      border-radius: 5px;
      cursor: pointer;
    }

    .create-match .submit-button button:hover {
      background-color: #45a049;
    }

    .home-button {
      text-align: center;
      margin-top: 30px;
    }

    .home-button button {
      background-color: #008CBA;
      color: #fff;
      border: none;
      padding: 12px 20px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 16px;
      border-radius: 5px;
      cursor: pointer;
    }

    .home-button button:hover {
      background-color: #007B9E;
    }

    .member {
      margin-top: 3px;
    }
  </style>
</head>
<body>
<h2>Create Match</h2>
<div class="create-match">
  <form action="" method="POST">
    <div class="field">
      <label>Stadium Name:</label>
      <input type="text" name="stadiumName" id="stadiumName" placeholder="Enter stadium name" required>
    </div>
    <div class="field">
      <label>Stadium Address:</label>
      <input type="text" name="stadiumAddress" id="stadiumAddress" placeholder="Enter stadium address" required>
    </div>
    <div class="field">
      <label>Match Date:</label>
      <input type="date" name="matchDate" id="matchDate" required>
    </div>
    <div class="field">
      <label>Match Time:</label>
      <input type="time" name="matchTime" id="matchTime" required>
    </div>
    <div class="field">
      <label>Joinable Level:</label>
      <p>Your Team Level is {{ matchLevel }}</p>
      <ul>
        <div class="match-level">
          <li>
            <span class="match-level-label">BEGINNER</span>
            <input type="checkbox" name="switch-beginner" id="switch-beginner" />
            <label for="switch-beginner">Toggle</label>
          </li>
        </div>
        <div class="match-level">
          <li>
            <span>INTERMEDIATE</span>
            <input type="checkbox" name="switch-intermediate" id="switch-intermediate" />
            <label for="switch-intermediate">Toggle</label>
          </li>
        </div>
        <div class="match-level">
          <li>
            <span>ADVANCED</span>
            <input type="checkbox" name="switch-advanced" id="switch-advanced" />
            <label for="switch-advanced">Toggle</label>
          </li>
        </div>
      </ul>
    </div>
    <div class="field">
      <label>Head Count Per Team:</label>
      <input type="number" name="headCountPerTeam" id="headCountPerTeam" placeholder="Enter head count per team"
             required>
    </div>
    <div class="field" id="inputMember">
      <label>Home Team Member:</label>
      {{#each homeTeamMember}}
        <div class="match-level">
          <span class="member" type="text" name="homeTeamParticipatingMember{{ @index }}"
                id="homeTeamParticipatingMember{{ @index }}">{{ this }}</span>
          <input type="checkbox" name="switch-homeTeamParticipatingMember{{ @index }}"
                 id="switch-homeTeamParticipatingMember{{ @index }}" />
          <label for="switch-homeTeamParticipatingMember{{ @index }}">Toggle</label>
        </div>
      {{/each}}
    </div>
    <div class="submit-button">
      <button type="submit">Create</button>
    </div>
  </form>
  <div class="home-button">
    <form action="/" method="get">
      <button>Home</button>
    </form>
  </div>
</div>
<script src="script-create.js"></script>
</body>
</html>
