<h2>프로필</h2>
<div class="profile">
  <div class="field">
    <label>닉네임</label>
    <span>{{ userName }}</span>
  </div>
  <div class="field">
    <label>이메일</label>
    <span>{{ email }}</span>
  </div>
  <div>
    <div class="edit-profile-button">
      <form action="/user/edit" method="GET">
        <button>프로필 수정하기</button>
      </form>
    </div>
    <div class="home-button">
      <form action="/" method="GET">
        <button>메인</button>
      </form>
    </div>
  </div>
</div>
</body>
</html>
